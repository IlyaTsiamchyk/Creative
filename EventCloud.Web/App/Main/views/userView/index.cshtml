<link href="~/App/Main/views/userView/index.js" rel="stylesheet">
<div class="row"  ng-controller="app.views.userView.index as vm">
    <div class="col-sm-4">
        <div class="sidebar-nav">
            <div class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="visible-xs navbar-brand">Sidebar menu</span>
                </div>
                <div class="navbar-collapse collapse sidebar-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="row">
                            <div class="col-xs-5">@L("UserName")</div>
                            <div class="col-xs-7"> asdassssssssdas</div>
                        </li>
                        <li class="row">
                            <div class="col-xs-5">&#64</div>
                            <div class="col-xs-7"> asdassssssssdas</div>
                        </li>
                        <li class="row">
                            <div class="col-xs-5">@L("CreationTime")</div>
                            <div class="col-xs-7"> asdassssssssdas</div>
                        </li>
                        <li class="dropdown" ng-if="vm.medals[0]">
                            <div>
                                <img src="http://img1.joyreactor.cc/pics/post/%D0%9A%D0%BE%D0%BC%D0%B8%D0%BA%D1%81%D1%8B-%D0%9A%D0%B0%D0%B6%D0%B4%D1%8B%D0%B9-%D1%82%D1%80%D0%B5%D1%82%D0%B8%D0%B9-%D1%81%D0%B0%D0%BC%D0%B0-%D1%81%D1%83%D1%82%D1%8C-%D0%BF%D0%B5%D1%81%D0%BE%D1%87%D0%BD%D0%B8%D1%86%D0%B0-1260013.png" class="img-rouned" />
                                <p>@L("ThirdMedal")</p>
                            </div>
                        </li>
                        <li class="dropdown" ng-if="vm.medals[1]">
                            <div>
                                <img src="http://demotivation.me/images/20110121/c5a62bob0n73.jpg" class="img-circle" />
                                <p>@L("FirstMedal")</p>
                            </div>
                        </li>
                        <li class="dropdown" ng-if="vm.medals[2]">
                            <div>
                                <img src="http://www.art-portrets.ru/art/repin/zaporozhskiy-pisar.jpg" class="img-circle" />
                                <p>@L("FifthMedal")</p>
                            </div>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div id="EventsIndex">
            <h2>
                <span>@L("Creatives")</span>

                <a ng-click="vm.openNewCreativeDialog()" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> @L("NewCreative")</a>
            </h2>
            <div class="row">
                <div ng-repeat="creative in vm.creatives " class="event-list-item">
                    <div class="event-body">
                        <h3 class="event-title">
                            {{creative.title}}
                        </h3>

                        <p class="event-description">
                            @L("Category"): {{creative.categoryName | characters:100}}
                        </p>
                        <input-stars ng-click="vm.setRating(creative.id, $index)" max="5" ng-model="creative.creativeRate"></input-stars>
                        <div class="event-actions">
                            <a class="btn btn-sm btn-info" ng-href="#/creatives/{{creative.id}}">
                                @L("Read")
                            </a>
                            <a ng-if="vm.isAccess(creative.userId)" class="btn btn-sm btn-info" ng-href="#/editor/{{creative.id}}">
                                @L("Edit")
                            </a>
                        </div>
                        
                       
                        <span class="event-date"><i class="fa fa-calendar-times-o"></i> {{creative.creationTime | momentFormat:'DD.MM.YYYY'}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>