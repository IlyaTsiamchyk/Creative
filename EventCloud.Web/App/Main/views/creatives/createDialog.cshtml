<div>
    <div class="modal-header">
        <h3 class="modal-title">@L("NewEvent")</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="col-lg-2 control-label">@L("Title")</label>
                    <div class="col-lg-10">
                        <input ng-model="vm.creative.Title" type="text" class="form-control" name="EventTitle">
                    </div>
                </div>
                <div class="form-group"">
                    <div class="col-lg-4">
                        <label class="control-label">@L("Category")</label>
                    </div>
                    <div class="col-lg-8">
                        <select class="form-control" ng-model="vm.creative.CategoryId">
                            <option ng-repeat="category in vm.categores" value="{{category.id}}">{{category.name}}</option>
                        </select>
                    </div>
                </div>
</fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" ng-click="vm.cancel()">@L("Cancel")</button>
        <button class="btn btn-primary" ng-click="vm.save()">@L("Save")</button>
    </div>
</div>