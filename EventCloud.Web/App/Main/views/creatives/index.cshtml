<div id="EventsIndex" ng-controller="app.views.creatives.index as vm">
    <h2>
        <span>@L("Creatives")</span>

        <a ng-click="vm.openNewCreativeDialog()" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> @L("NewCreative")</a>
    </h2>
    <div class="row">
        <div ng-repeat="creative in vm.creatives " class="event-list-item col-md-6">
            <div class="event-body">
                <h3 class="event-title">
                    {{creative.Title}}
                </h3>

                <p class="event-description">
                    @L("Category"): {{creative.Category.Name | characters:100}}
                </p>
                <div ng-if="event.isCancelled" class="event-canceled-info">
                    @L("ThisEventIsCanceled")
                </div>
                <div class="event-actions">
                    <a class="btn btn-sm btn-info" ng-href="#/events/{{event.id}}">
                        @L("Details") 
                        <i class="fa fa-arrow-circle-right"/>
                    </a>
                </div>
                <span class="event-date"><i class="fa fa-calendar-times-o"></i> {{creative.CreationTime | momentFormat:'DD.MM.YYYY'}}</span>
            </div>
        </div>
    </div>
</div>